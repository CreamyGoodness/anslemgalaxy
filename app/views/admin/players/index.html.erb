<div id="site-content">
  <% @players.each do |player| %>
      <div class="row">
        <div class="columns small-6 medium-6 large-6"><%= link_to player.name, edit_admin_player_path(player) %></div>
        <div class="columns small-2 medium-2 large-2">mental: <%= player.mental %></div>
        <div class="columns small-2 medium-2 large-2">physical: <%= player.physical %></div>
        <div class="columns small-2 medium-2 large-2">social: <%= player.social %></div>
      </div>
  <% end %>
</div>